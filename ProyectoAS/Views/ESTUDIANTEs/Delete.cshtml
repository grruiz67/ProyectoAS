@model ProyectoAS.Models.ESTUDIANTE

@{
    ViewBag.Title = "Eliminar Estudiante";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<h3>Esta seguro de eliminar este estudiante?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            TIPO DOCUMENTO
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TIPO_DOC.ABREVIATURA)
        </dd>
        
        <dt>
            IDENTIFICACIÓN
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NUMERO_IDENTIFICACION)
        </dd>

        <dt>
            PRIMER NOMBRE 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PRIMER_NOMBRE)
        </dd>

        <dt>
            SEGUNDO NOMBRE 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SEGUNDO_NOMBRE)
        </dd>

        <dt>
            PRIMER APELLIDO
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PRIMER_APELLIDO)
        </dd>

        <dt>
            SEGUNDO APELLIDO
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SEGUNDO_APELLIDO)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CELULAR)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CELULAR)
        </dd>

        <dt>
            GENERO
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GENERO.ABREVIATURA)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Regresar a lista", "Index")
        </div>
    }
</div>
